{
    "compilerOptions": {
        "baseUrl": "./src",
        "rootDir": ".",
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,

        /* Bundler mode */
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmitOnError": true,

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        /* for vitest */
        "types": ["vitest/globals"],
        "paths": {
            "@packages/*": ["packages/*"],
            "@config/*": ["config/*"],
            "@utils/*": ["utils/*"],
            "@libs/*": ["libs/*"]
        }
    },
    "exclude": [
        "node_modules"
    ]
}